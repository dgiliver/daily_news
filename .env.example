# Daily News Aggregator Configuration
# Copy this file to .env and fill in your values

# Claude API (required for ranking)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Configuration (Gmail SMTP)
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here

# Recipients (comma-separated)
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
SMS_RECIPIENTS=1234567890,0987654321

# SMS Carrier Gateway (default: AT&T)
SMS_CARRIER_GATEWAY=txt.att.net

# Optional: Override defaults
# DIGEST_STORY_COUNT=15
# SMS_HEADLINE_COUNT=5
# MAX_ARTICLES_PER_SOURCE=10
# COLLECTION_TIMEOUT=30
